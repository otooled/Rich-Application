@model RACASem6.Models.Trip

@{
    ViewBag.Title = "Details";
}

<div class="col-lg-offset-1 col-sm-8">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-1 well-lg well " align="center">

                <h2>@Model.TripName</h2>
                <div class="form-group">
                    <label class="h4">@Html.DisplayNameFor(model => model.TripName): </label>
                    @Html.DisplayFor(model => model.TripName)
                </div>

                <div class="form-group">
                    <label class="h4">@Html.DisplayNameFor(model => model.NoOfLegs): </label>
                    @Html.DisplayFor(model => model.Legs.Count)
                </div>

                <div class="form-group">
                    <label class="h4">@Html.DisplayNameFor(model => model.TripStartDate): </label>
                    @Html.DisplayFor(model => model.TripStartDate)
                </div>

                <div class="form-group">
                    <label class="h4">@Html.DisplayNameFor(model => model.TripFinishDate): </label>
                    @Html.DisplayFor(model => model.TripFinishDate)
                </div>
                <a href="@Url.Action("ViewGuest", "Home")" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-user"></i> Add a guest to this leg</a>
                <a href="@Url.Action("CheckLegViability", "Home")" class="btn btn-info btn-sm"><i class="glyphicon glyphicon-folder-open"></i> Check leg viability</a>

            </div>
        </div>
        <div class="col-md-4 spaceIt text-right">
            <div class="btn-group">

                <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-arrow-left"></i> Back</a>

                @Ajax.ActionLink(" View Trip Legs", "LegsAction", "Home", new { id = Model.TripId },
                                     new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "LegsPosition" },
                                     new { @class = "btn btn-success btn-lg" })

            </div>
        </div>
    </div>
</div>


<div id="LegsPosition" class="legsPosition"></div>



